pipeline {
    agent any

    stages {
        stage('Docker Deploy To Container') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'dockerhub_id') {
                        bat "docker run -d --name devopsassignment -p 5000:5000 kusuml/devops-assignment"
                    }
                }
            }
        }
    }
}